{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "module": "esnext",
    "target": "es2018",
    "lib": ["es6", "es2018"],
    "moduleResolution": "node",
    "rootDir": "src",
    "outDir": "dist",
    "composite": true,
    "declaration": true,
    "baseUrl": ".",
    "declarationMap": false,
    "paths": {
      "*": ["*"]
    }
  },
  "exclude": ["../node_modules", "node_modules", ".*", "coverage", "dist"],
  "include": [
    "src/**/*.d.ts",
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.md",
    "src/**/*.json"
  ]
}
