{
  "extends": "../../packages.base.tsconfig.json",
  "compilerOptions": {
    "outDir": "build",
    "target": "es2019",
    "lib": ["es6", "dom", "es2019"],
    "module": "esnext",
    "isolatedModules": true,
    "skipLibCheck": true,
    "jsx": "react",
    "baseUrl": ".",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "ignoreDeprecations": "5.0",
    "rootDirs": ["./", "../../packages"]
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "**/node_modules"]
}
