{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "es2019",
    "lib": ["es6", "dom", "es2019"],
    "module": "esnext",
    "isolatedModules": true,
    "skipLibCheck": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "noEmit": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "ignoreDeprecations": "5.0",
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "**/node_modules"]
}
