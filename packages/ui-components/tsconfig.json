{
  "extends": "../../packages.base.tsconfig.json",
  "compilerOptions": {
    "outDir": "build",
    "target": "esnext",
    "lib": ["esnext"],
    "module": "esnext",
    "jsx": "react",
    "ignoreDeprecations": "5.0",
    "declarationMap": false,
    "rootDirs": ["./", "./src", "../../packages"]
  },
  "include": ["./src/**/*", "./src/**/*.json"],
  "exclude": [
    "node_modules",
    "**/node_modules",
    "**/tests/*",
    "**/*.test.tsx",
    "**/*.test.ts"
  ]
}
